<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout android:layout_width="600px"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/remote_name"
                android:layout_gravity="left|center_vertical"
                />

        <EditText
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:ems="8"
                android:id="@+id/remote_name"
                android:layout_gravity="right"
                />
    </LinearLayout>

    <LinearLayout android:layout_width="600px"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/remote_vendor"
                android:layout_gravity="left|center_vertical"
                />

        <EditText
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:ems="8"
                android:id="@+id/remote_vendor"
                android:layout_gravity="right"
                />
    </LinearLayout>

    <LinearLayout android:layout_width="600px"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/remote_type"
                android:layout_gravity="left|center_vertical"
                />

        <EditText
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:ems="8"
                android:id="@+id/remote_type"
                android:layout_gravity="right"
                />
    </LinearLayout>

    <Space
            android:layout_height="40px"
            android:layout_width="fill_parent"/>
</LinearLayout>